{
  "name": "gulp-lint-jsdocs",
  "version": "1.0.0",
  "description": "This is a Typescript project having a development setup of common dev dependecies and things for unit testing",
  "main": "App.js",
  "scripts": {
    "test": "gulp start",
    "start": "tsc && node Src/Dist/Src/App.js",
    "start-auto": "tsc && ts-node-dev Src/App.ts",
    "tsc": "tsc",
    "tests": "node ./node_modules/ava/cli.js ./Src/Dist/Test/*.test.js",
    "tests-pretty": "node ./node_modules/ava/cli.js ./Src/Dist/Test/*.test.js --verbose",
    "prettier-format": "prettier --config .prettierrc './Src/**/*.ts' --write",
    "lint": "eslint . --ext .ts",
    "lint-and-fix": "eslint . --ext .ts --fix"
  },
  "author": "Adeel Zammit",
  "license": "ISC",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "ava": "^3.11.1",
    "del": "^5.1.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "gulp": "^4.0.2",
    "husky": "^4.3.0",
    "prettier": "^2.1.2",
    "supervisor": "^0.12.0",
    "tslint": "^6.1.3",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "@types/js-yaml": "^3.12.5",
    "axios": "^0.19.2",
    "js-yaml": "^3.14.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier-format && npm run lint"
    }
  }
}
